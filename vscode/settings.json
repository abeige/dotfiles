{
    "workbench.colorTheme": "Community Material Theme Lighter",
    "python.defaultInterpreterPath": "/Users/adam/opt/miniconda3/bin/python",
    "jupyter.askForKernelRestart": false,
    "php.validate.executablePath": "/opt/homebrew/bin/php",
    "workbench.startupEditor": "none",
    "security.workspace.trust.untrustedFiles": "open",
    "editor.fontSize": 14,
    "editor.fontWeight": "normal",
    "editor.lineHeight": 1.5,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "trailing",
    "editor.dragAndDrop": false,
    "editor.guides.indentation": false,
    "githubPullRequests.createOnPublishBranch": "never",

    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "underline",
    "vim.cursorStylePerMode.replace": "block",
    "vim.cursorStylePerMode.visual": "underline",
    "vim.cursorStylePerMode.visualblock": "underline",
    "vim.cursorStylePerMode.visualline": "block-outline",
    "vim.hlsearch": true,
    "vim.leader": " ",
    "vim.normalModeKeyBindings": [
        {
            "before": ["leader", "w"],
            "commands": [":w"]
        },
        {
            "before": ["leader", "q"],
            "commands": [":q"]
        },
        {
            "before": ["H"],
            "commands": [":bp"]
        },
        {
            "before": ["L"],
            "commands": [":bn"]
        },
        {
            "before": ["leader", "d"],
            "commands": [":bd"]
        },
        {
            "before": ["M"],
            "after": ["C-w", "w"]
        },
        {
            "before": ["leader", "h"],
            "commands": [":noh"]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.visualModeKeyBindings": [{
            "before": ["leader", "j"],
            "after": ["<Esc>"]
    }],

    "editor.lineNumbers": "relative",
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#ededed",
        "editor.selectionHighlightBackground": "#ededed",
        "editor.hoverHighlightBackground": "#ededed",
        "editor.lineHighlightBackground": "#f6f6f6",
        "editor.wordHighlightBackground": "#ededed",
        "editor.wordHighlightStrongBackground": "#ededed",
        // "editorBracketMatch.background": "#fda3316f",
        // "editorBracketMatch.border": "#fda3316f",
    },
    "editor.tokenColorCustomizations": {
        "comments": "#B0C4CE",
        "textMateRules": [
            {
                "scope": "keyword.other",
                "settings": {
                    "foreground": "#39ADB5",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "keyword.codetag.notation",
                "settings": {
                    "fontStyle": "bold"
                }
            },
        ]
    },
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairsHorizontal": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "interactiveWindow.alwaysScrollOnNewCell": false,
    "editor.fontFamily": "'Cascadia Code', Monaco, Menlo, 'Courier New', monospace",
    "[python]": {
        "editor.formatOnType": true
    }, 
    "[snowflake-sql]": {
        "editor.semanticHighlighting.enabled": false,
    },
    "notebook.output.scrolling": true,
    "notebook.lineNumbers": "on",
    "snowflake.highlightQuery.enabled": false,
    "snowflake.showExecuteAboveStatement.enabled": false,
    "git.openRepositoryInParentFolders": "always",
}