{
    "workbench.colorTheme": "sublime-base16",
    "workbench.startupEditor": "none",
    "security.workspace.trust.untrustedFiles": "open",
    "window.newWindowProfile": "Default",

    "editor.fontSize": 14,
    "editor.fontWeight": "normal",
    "editor.lineHeight": 1.3,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "trailing",
    "editor.dragAndDrop": false,
    "editor.occurrencesHighlight": "off",
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairsHorizontal": false,
    "editor.fontFamily": "'Cascadia Code', Monaco, Menlo, 'Courier New', monospace",
    "editor.trimAutoWhitespace": true,

    "interactiveWindow.alwaysScrollOnNewCell": false,
    "notebook.output.scrolling": true,
    "notebook.lineNumbers": "on",
    "jupyter.askForKernelRestart": false,

    "git.openRepositoryInParentFolders": "always",
    "githubPullRequests.createOnPublishBranch": "never",
    "diffEditor.ignoreTrimWhitespace": false,

    "snowflake.highlightQuery.enabled": false,
    "snowflake.showExecuteAboveStatement.enabled": false,
    "snowflake.connectionsConfigFile": "/Users/adam/.snowflake/connections.toml",
    "[snowflake-sql]": {
        "editor.semanticHighlighting.enabled": false
    },

    "python.defaultInterpreterPath": "/Users/adam/opt/miniconda3/bin/python",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none"
    },
    "[python]": {
        "editor.formatOnType": true
    },

    "php.validate.executablePath": "/opt/homebrew/bin/php",

    "editor.lineNumbers": "relative",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "underline",
    "vim.cursorStylePerMode.replace": "block",
    "vim.cursorStylePerMode.visual": "underline",
    "vim.cursorStylePerMode.visualblock": "underline",
    "vim.cursorStylePerMode.visualline": "block-outline",
    "vim.hlsearch": true,
    "vim.leader": " ",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-n>": false,
        "<C-w>": false,
    },
    "vim.normalModeKeyBindings": [
        {
            "before": ["s"],
            "commands": [":w"]
        },
        {
            "before": ["H"],
            "commands": [":bp"]
        },
        {
            "before": ["L"],
            "commands": [":bn"]
        },
        {
            "before": ["leader", "d"],
            "commands": [":bd"]
        },
        {
            "before": ["M"],
            "after": ["C-w", "w"]
        },
        {
            "before": ["leader", "h"],
            "commands": [":noh"]
        },
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["leader", "j"],
            "after": ["<Esc>"]
        },
    ],
}
